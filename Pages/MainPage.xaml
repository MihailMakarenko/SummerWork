<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerWorkProject.Pages.MainPage"
             Title="MainPage">
    <VerticalStackLayout>

        <Button
            WidthRequest="200"
       Text="Покупка товаров"
       VerticalOptions="Center"
       HorizontalOptions="Center"
       Clicked="Button_Clicked_AddProduct"
           Margin="0,100,0,0"/>



        <Button
       Text="Трата денег"
           WidthRequest="200"
       VerticalOptions="Center"
       HorizontalOptions="Center"
       Clicked="Button_Clicked_AddEvent"
           Margin="0,100,0,100"/>



        <Button
       Text="Отправка данных в телеграмм"
       VerticalOptions="Center"
       HorizontalOptions="Center"
       Clicked="Button_Clicked_SendToTelegram" />

        <Button
Text="Просмотр информации"
VerticalOptions="Center"
HorizontalOptions="Center"
Clicked="Button_Clicked_Information" 
             Margin="0,100,0,0"/>
    </VerticalStackLayout>
</ContentPage>