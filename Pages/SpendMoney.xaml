<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerWorkProject.Pages.SpendMoney"
             Title="SpendMoney">
    <VerticalStackLayout>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25"
         >
            <Entry Margin="0,10,20,0" x:Name="Title" MaxLength="20" Keyboard="Text" Placeholder="Название"/>

            <DatePicker x:Name="DateBuy" Format="dd/MM/yy" DateSelected="DateBuy_DateSelected">
                <DatePicker.MinimumDate>6/16/2024</DatePicker.MinimumDate>
            </DatePicker>


            <Entry x:Name="PriceEntry" Placeholder = "Цена" FontFamily="Helvetica" Keyboard="Numeric"
             FontSize="22" MaxLength ="20" />



            <Entry x:Name="Place" Placeholder = "Место покупки" FontFamily="Helvetica" Keyboard="Text"
    FontSize="22" MaxLength ="20" />





            <Button
             x:Name="AddRecordBtn"
             Text="Click me" 
             SemanticProperties.Hint="Counts the number of times you click"
             Clicked="AddRecordBtn_Clicked"
             HorizontalOptions="Fill" />

            <Label x:Name="text"/>

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>